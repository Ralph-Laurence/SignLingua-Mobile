<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Full border frame -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#4DFFFFFF" /> <!-- Change to your desired border color -->
        </shape>
    </item>

    <item android:gravity="top|left">
        <bitmap
            android:src="@drawable/ic_region_top_left"
            android:gravity="top|left"
            android:width="16dp"
            android:height="16dp" />
    </item>

    <item android:gravity="top|right">
        <bitmap
            android:src="@drawable/ic_region_top_right"
            android:gravity="top|right"
            android:width="16dp"
            android:height="16dp" />
    </item>

    <item android:gravity="bottom|left">
        <bitmap
            android:src="@drawable/ic_region_bottom_left"
            android:gravity="bottom|left"
            android:width="16dp"
            android:height="16dp" />
    </item>

    <item android:gravity="bottom|right">
        <bitmap
            android:src="@drawable/ic_region_bottom_right"
            android:gravity="bottom|right"
            android:width="16dp"
            android:height="16dp" />
    </item>
</layer-list>

