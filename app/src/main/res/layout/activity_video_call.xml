<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_call"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".videocall.VideoCallActivity">

    <!-- Remote video view (other participant) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/remote_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Local video view (yourself) - smaller view in corner -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/local_video_view"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp" />

    <!-- Controls container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/camera_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Toggle camera"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_state_camera_on" />

        <ImageButton
            android:id="@+id/end_call_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="End call"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_state_endcall" />

        <ImageButton
            android:id="@+id/microphone_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Toggle microphone"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_state_mic_on" />

    </LinearLayout>

    <!-- Status text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/bg_call_status_text"
        android:padding="8dp"
        android:text="Connecting..."
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

</RelativeLayout>